# Change directories without cd
setopt AUTO_CD
# Add directories to stack on cd
setopt AUTO_PUSHD
# Remove trailing / for directories
setopt AUTO_REMOVE_SLASH
# Autocomplete aliases
setopt COMPLETE_ALIASES
# Allow variables as cd path
setopt CDABLE_VARS
# Prevent saving double commands in hitsory
setopt HIST_IGNORE_ALL_DUPS
# Don't save nn consecutive duplicate commands
setopt HIST_SAVE_NO_DUPS
# Allow comments
setopt INTERACTIVE_COMMENTS
# Menu based auto completion
setopt MENU_COMPLETE
# List completions when it finds multiple
setopt AUTO_LIST
# Make list more compact
setopt LIST_PACKED
# Prompt settings
setopt PROMPT_SUBST
